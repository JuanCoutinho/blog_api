<div class="w-full space-y-6">
  <% if notice.present? %>
    <p class="py-2 px-4 bg-green-100 text-green-700 border border-green-300 rounded-lg shadow-md" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <% content_for :title, "Posts" %>

  <h1 class="text-4xl font-semibold text-blue-700 text-center mb-8">Criar Novo Post</h1>
  <form id="post-form" class="bg-white bg-opacity-90 p-8 rounded-lg shadow-lg max-w-lg mx-auto">
    <div class="mb-6">
      <label for="post-title" class="block font-bold text-blue-700 mb-2">Título:</label>
      <input type="text" id="post-title" class="w-full p-3 rounded-lg bg-blue-50 border border-blue-300 text-blue-800 shadow-inner" placeholder="Digite o título..." required>
    </div>
    <div class="mb-6">
      <label for="post-body" class="block font-bold text-blue-700 mb-2">Conteúdo:</label>
      <textarea id="post-body" class="w-full p-3 rounded-lg bg-blue-50 border border-blue-300 text-blue-800 shadow-inner resize-vertical" placeholder="Digite o conteúdo..." required></textarea>
    </div>
    <button type="submit" class="w-full py-3 bg-blue-700 text-white rounded-lg font-bold hover:bg-blue-600 transition-transform duration-200 transform hover:-translate-y-1">Criar Post</button>
  </form>

  <h2 class="text-2xl font-semibold text-blue-700 text-center mt-10 mb-4">Posts Recentes</h2>
  <ul id="posts-list" class="space-y-4 max-w-lg mx-auto">
    <% @posts.each do |post| %>
      <li class="bg-blue-50 p-6 rounded-lg shadow-md hover:shadow-lg transition duration-200 transform hover:-translate-y-1 border border-blue-200">
        <strong class="text-lg font-bold text-blue-800"><%= post.title || "Sem Título" %></strong>
        <span class="block mt-2 text-blue-700"><%= post.body || "Sem Conteúdo" %></span>
        <div class="mt-4">
          <%= link_to "Show this post", post, class: "inline-block py-2 px-4 bg-blue-100 text-blue-800 hover:bg-blue-200 rounded-lg font-medium transition duration-200" %>
        </div>
      </li>
    <% end %>
  </ul>

  <!-- Homebar de Aplicativo -->
  <div class="homebar"></div>

  <!-- Footerbar de Aplicativo -->
  <div class="footerbar"></div>
</div>
